<?xml version="1.0"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
	<display-name>WikEE</display-name>
	<security-constraint>
		<display-name>secret for login user</display-name>
		<web-resource-collection>
			<web-resource-name>Login User</web-resource-name>
			<url-pattern>/login/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>REGULAR</role-name>
			<role-name>REDACTOR</role-name>
			<role-name>ADMIN</role-name>
		</auth-constraint>
	</security-constraint>
	<security-constraint>
		<display-name>secret for redactor</display-name>
		<web-resource-collection>
			<web-resource-name>Redactor</web-resource-name>
			<url-pattern>/redactor/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>REDACTOR</role-name>
			<role-name>ADMIN</role-name>
		</auth-constraint>
	</security-constraint>
		<security-constraint>
		<display-name>secret for admin</display-name>
		<web-resource-collection>
			<web-resource-name>Admin</web-resource-name>
			<url-pattern>/admin/*</url-pattern>
		</web-resource-collection>
		<auth-constraint>
			<role-name>ADMIN</role-name>
		</auth-constraint>
	</security-constraint>
	    
	  <login-config>  
     <auth-method>FORM</auth-method>  
     <realm-name>WikEE</realm-name>  
     <form-login-config>  
      <form-login-page>/login.jsp</form-login-page>
      <form-error-page>/loginfail.jsp</form-error-page>
     </form-login-config>  
    </login-config>
      
    <security-role>  
     <role-name>REGULAR</role-name>  
    </security-role>  
    <security-role>  
     <role-name>REDACTOR</role-name>  
    </security-role>  
    <security-role>  
     <role-name>ADMIN</role-name>  
    </security-role>    
</web-app>
